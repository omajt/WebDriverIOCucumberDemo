{
  "name": "webdriveriocucumber",
  "version": "1.0.0",
  "description": "Cucumber Webdriverio v7 Project",
  "main": "index.js",
  "scripts": {
    "regression": "wdio wdio.conf.js --cucumberOpts.tagExpression",
    "regression:docker": "wdio wdio.docker.conf.js --cucumberOpts.tagExpression",
    "regression:docker-headless": "wdio wdio.docker-headless.conf.js --cucumberOpts.tagExpression",
    "generate-report": "allure generate allure-results --clean && allure open",
    "lint": "gherkin-lint && eslint '**/*.js'",
    "format": "prettier --write '**/*.{js,json,md}'"
  },
  "author": "Omar Majt",
  "license": "ISC",
  "devDependencies": {
    "@babel/eslint-parser": "^7.17.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-wdio": "^7.4.2",
    "faker": "^5.5.3",
    "gherkin-lint": "^4.2.2",
    "prettier": "^2.5.1"
  },
  "dependencies": {
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/register": "^7.16.5",
    "@wdio/allure-reporter": "^7.16.14",
    "@wdio/cli": "^7.16.12",
    "@wdio/cucumber-framework": "^7.16.14",
    "@wdio/local-runner": "^7.16.16",
    "@wdio/runner": "^7.16.16",
    "@wdio/spec-reporter": "^7.16.14",
    "allure-commandline": "^2.17.2",
    "chai": "^4.3.4",
    "chromedriver": "^98.0.1",
    "dotenv": "^16.0.0",
    "wdio-chromedriver-service": "^7.2.8",
    "wdio-cucumberjs-json-reporter": "^4.1.4",
    "wdio-docker-service": "^3.2.0"
  }
}
